class Solution {
    public int lengthOfLastWord(String s) {
        
        int i;
        int count = 0;
        
        for(i = s.length()-1; i >= 0; --i) {
            if(s.charAt(i) != ' '){
                count+=1;
            }
            
            else if ((s.charAt(i) == ' ') && (count == 0)) {
                continue;

            }
            
            else{
                break;
            }
        }
        
        return count;
        
        
    }
}
